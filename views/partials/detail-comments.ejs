<button class="showComments fixedButton hide" id="showSub">
    Comments
</button>
<h2 class="commentsHeader">
    Comments
</h2>
<ul id="comments" class="commentsList">
    <li>
        <%= comments.comment %>
        <div class="iconFloat" id="icon<%= comments.commentId %>"></div>
    </li>
</ul>
<form action="" id="commentForm" class="commentsForm">
    <input type="text" id="commentInput" autocomplete="off" maxlength="430" placeholder="max char. 430" />
    <!-- <input type="submit" value="send"> -->
    <button class="submitBut" type="submit">Send</button>
</form>
